<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_BillAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:background="?android:attr/colorActivatedHighlight"
        android:ems="10"
        android:hint="@string/enter_amount"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_BillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"

        android:background="#7cb3d3"
        android:hint="@string/enter_amount"
        android:labelFor="@+id/editText_BillAmount"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tip_label"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:textSize="18sp"
        tools:text="Tip" />

    <TextView
        android:id="@+id/display_tip"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:background="#64cf8a"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Total"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Total"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/display_total_bill"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:background="#64cf8a"
        android:text="Total"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:max="100"


        android:min="0"
        android:scrollbarSize="18sp" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="0%"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/MessageToUser"
        android:layout_width="319dp"
        android:layout_height="66dp"
        android:layout_column="1"
        android:layout_row="4"
        android:background="#bbd8dd"
        android:text="How cool are you?"
        android:textSize="18sp" />

</GridLayout>